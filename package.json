{
  "name": "review-format-kit",
  "version": "0.1.0",
  "description": "Review Format Kit (RFK) - Standardize your code review comments with ease.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --config vite.content.config.ts",
    "postbuild": "node scripts/validate-build.cjs",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "package:chrome": "web-ext build -s dist -a packages --overwrite-dest",
    "package:firefox": "web-ext build -s dist -a packages --overwrite-dest",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "code-review",
    "github",
    "conventional-comments",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.10",
    "@types/webextension-polyfill": "^0.12.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^2.0.3",
    "@vitest/ui": "^2.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "happy-dom": "^14.12.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "playwright": "^1.45.1",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vitest": "^2.0.3",
    "web-ext": "^8.10.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css}": [
      "prettier --write"
    ]
  }
}
